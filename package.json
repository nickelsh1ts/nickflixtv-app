{
  "name": "test-app",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev --parallel --continue",
    "lint": "turbo lint",
    "format": "prettier --loglevel warn --write --cache .",
    "format:check": "prettier --check --cache .",
    "typecheck": "yarn typecheck:server && yarn typecheck:client",
    "typecheck:server": "tsc --project apps/server/tsconfig.json --noEmit",
    "typecheck:client": "tsc --project apps/web/tsconfig.json --noEmit"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "prettier": "^3.1.0",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.21",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
