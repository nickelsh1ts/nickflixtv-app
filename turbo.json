{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/*", ".next/**", "!.next/cache/**", ".strapi/*"]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": true,
      "persistent": true,
      "outputs": ["dist/*", ".next/**", "!.next/cache/**"]
    },
    "start": {
      "dependsOn": ["build", "lint"]
    }
  },
  "globalEnv": [
    "STRAPI_URL",
    "STRAPI_API_URL",
    "STRAPI_API_TOKEN",
    "NEXT_PUBLIC_URL"
  ]
}
